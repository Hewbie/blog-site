<p id="notice"><%= notice %></p>

<h2><strong><%= @post.title %></strong> by <%= @post.author %></h2>
<h4><%= @post.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%I:%M %p %m/%d/%Y")%></h4>

<div class="well"><p>
  <%= @post.blog_entry %>
</p>
</div>

<div class="btn-group" role="group" aria-label="...">
	<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %>
	<%= link_to 'Back', posts_path, class: "btn btn-default" %>
</div>

<h4>Leave us a comment!</h4>
<%= render 'comments/form', comment: @comment %>

<br>

<% @post.comments.reverse.each do |comment| %>
	<div class="well">
		<p><strong><%= comment.author %></strong> at <%= comment.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%I:%M %p %m/%d/%Y")%></p>
		<p><%= comment.comment_entry %></p>
	</div>
<% end %>